{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom",
            "es6",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "~/app/*": [
                "projects/cookbook/src/app/*"
            ],
            "~/environments/*": [
                "projects/cookbook/src/environments/*"
            ],
            "@kirbydesign/designsystem": [
                "projects/kirby/src/index.ts"
            ],
            "@kirbydesign/designsystem/*": [
                "projects/kirby/src/*"
            ],
            "~/*": [
                "tilde-imports-are-not-allowed-as-it-breaks-compilation-in-target-project"
            ]
        }
    }
}